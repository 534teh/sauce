{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Sauce Tests",
            "type": "coreclr",
            "request": "attach",
            "processId": "${input:processId}",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "sauce-debug"
                ],
                "debuggerPath": "/vsdbg/vsdbg",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/src/sauce": "${workspaceFolder}/sauce"
            },
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "processId",
            "type": "promptString",
            "description": "Enter the process ID from the test output to attach the debugger."
        }
    ]
}